# TradeMind AI - Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# API KEYS - Required for sentiment analysis
# ============================================

# ZAI API Key (for GLM-4.7 sentiment analysis)
ZAI_API_KEY=your_zai_api_key_here

# OpenAI API Key (optional, alternative to ZAI)
OPENAI_API_KEY=your_openai_api_key_here

# LangSmith API Key (optional, for observability)
LANGSMITH_API_KEY=your_langsmith_key_here

# ============================================
# DATABASE - PostgreSQL
# ============================================

# Database connection URL
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://trading:${DB_PASSWORD}@localhost:5433/trading_agent

# Or set components separately:
DB_USER=trading
DB_PASSWORD=your_secure_password_here
DB_HOST=localhost
DB_PORT=5433
DB_NAME=trading_agent

# ============================================
# REDIS
# ============================================

REDIS_URL=redis://localhost:6379/0

# ============================================
# INTERACTIVE BROKERS
# ============================================

# IB Gateway Connection
IBKR_HOST=127.0.0.1
IBKR_PORT=7497
IBKR_CLIENT_ID=1
IBKR_ACCOUNT=your_account_id_here
IBKR_PAPER_TRADING=true

# IBKR Broker Selection (Recommended: use ib_insync)
# IBKR_USE_INSYNC=true  # Use new ib_insync-based broker (recommended)
# IBKR_USE_INSYNC=false # Use old threaded broker (deprecated, will be removed in v2.0)

# IBKR Insync Configuration (for new broker)
# IBKR_INSYNC_RECONNECT_ENABLED=true
# IBKR_INSYNC_MAX_RECONNECT_ATTEMPTS=5
# IBKR_INSYNC_RECONNECT_BACKOFF=5
# IBKR_INSYNC_CONNECT_TIMEOUT=10
# IBKR_INSYNC_LAZY_CONNECT=true

# ============================================
# SECURITY
# ============================================

# WebSocket authentication token (generate a secure random string)
WEBSOCKET_AUTH_TOKEN=your_secure_random_token_here

# ============================================
# OPTIONAL - Other Settings
# ============================================

# App mode: paper, backtest, live
APP_MODE=paper

# Debug mode
DEBUG=false
